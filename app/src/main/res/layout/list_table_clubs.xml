<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewRank"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="36sp"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textViewClubNameTable"
            android:layout_marginStart="8dp"
            android:layout_alignParentTop="true"/>
    <ImageView
            android:id="@+id/imageViewEmblemTable"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_jleague"
            android:layout_toEndOf="@+id/textViewRank"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentTop="true"
            android:padding="2dp"/>
    <TextView
            android:id="@+id/textViewClubNameTable"
            android:text="北海道コンサドーレ札幌"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewEmblemTable"
            android:layout_alignBottom="@+id/imageViewEmblemTable"
            android:layout_toEndOf="@+id/imageViewEmblemTable"
            android:layout_marginRight="24dp"
            android:gravity="center"/>
    <ImageView
            android:id="@+id/imageViewFowardListTableClubs"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:layout_alignTop="@+id/textViewClubNameTable"
            android:layout_alignBottom="@+id/textViewClubNameTable"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>