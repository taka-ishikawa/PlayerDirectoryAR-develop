<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/textViewPlayerName"
                android:text="PlayerName 10"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="1" />
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_height="24dp"
                android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_height="12dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/textViewPlayerHeight"
                android:text="xxx [cm]"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_height="24dp"
                android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/textViewPlayerWeight"
                android:text="xx [kg]"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_height="24dp"
                android:layout_weight="1"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/imageViewLeftFootCard"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_foot_left"
                android:visibility="invisible"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/imageViewRightFootCard"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_foot_right"
                android:visibility="invisible"
                android:layout_weight="1"/>
    </TableRow>
</TableLayout>