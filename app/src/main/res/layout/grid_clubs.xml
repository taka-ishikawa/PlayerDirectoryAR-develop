<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageViewEmblem"
            android:layout_width="128dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_jleague"
            android:padding="8dp"/>
    <TextView
            android:id="@+id/textViewClubNameGrid"
            android:text="クラブ名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageViewEmblem"
            android:layout_alignEnd="@+id/imageViewEmblem"
            android:layout_below="@+id/imageViewEmblem"
            android:textAlignment="center"
            android:textSize="10sp"/>
</RelativeLayout>